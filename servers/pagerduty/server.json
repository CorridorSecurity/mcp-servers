{
  "name": "PagerDuty",
  "description": "Manage incidents and alerts.",
  "transport": [
    "stdio"
  ],
  "icon": "./icon.svg",
  "oauth": false,
  "config": {
    "command": "uvx",
    "args": [
      "pagerduty-mcp",
      "--enable-write-tools"
    ],
    "env": {
      "PAGERDUTY_USER_API_KEY": "",
      "PAGERDUTY_API_HOST": "https://api.pagerduty.com"
    }
  }
}